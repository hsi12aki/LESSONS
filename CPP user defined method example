//in cpp, we need to declare the smaller user defined methods first before the main

#include <iostream>
using namespace std;

int sum (int a, int b){
    return a+b;
}

void diavolo(){
cout<<"I love Diavolo!"<<endl;
}
void aki(){
    cout<<"I love Aki!!!"<<endl;
}

int main(){
int n1, n2;
diavolo();
aki();
diavolo();
aki();
cout<<"enter number 1: "<<endl;
cin>>n1;
cout<<"enter number 2: "<<endl;
cin>>n2;
int a = sum(n1,n2);
cout<<"The sum is "<<a<<".";
}
