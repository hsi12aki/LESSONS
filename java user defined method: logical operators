import java.util.Scanner;

public class Operators{
public static void main(String [] args){
int num1, num2;

Scanner scanner = new Scanner(System.in);
System.out.print("Enter Number 1: ");
num1 = scanner.nextInt();
System.out.print("Enter Number 2: ");
num2 = scanner.nextInt();
System.out.println("Choose an operator(+, -, *, /)");
char ope = scanner.next().charAt(0);

int res = 0;
    switch (ope) {
        case '+':
            res = add(num1, num2);
            break;
        case '-':
            res = sub(num1, num2);
            break;
        case '*':
            res = mul(num1, num2);
            break;
        case '/':
            if (num2 != 0) {
                res = div(num1, num2);
            } else {
    System.out.println("Error: Invalid or division by zero. Try again.");
                return;
            }
            break;
        default:
                System.out.println("Invalid operator.");
                return;
        }
System.out.println("The total of the two numbers is " + res);

}

public static int add(int num1, int num2){
    return num1 + num2;
}
public static int sub(int num1, int num2){
    return num1 - num2;
}
public static int mul(int num1, int num2){
    return num1 * num2;
}
public static int div(int num1, int num2){
    return num1 / num2;
}

}
//filename: FINAL_TERM_ACT1_COMPROG2_Alcazar, Denise
//act 1 is adding num 1 and num 2 only
//act 2 is Enter 1st number, Enter 2nd number, Enter operator (+,-,*,/);; it will be add(), sub(), mul(), div()
