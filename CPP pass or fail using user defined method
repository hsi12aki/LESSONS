#include <iostream>
#include <limits>
using namespace std;

void Inputgrades(int grades[], int noStudents) {
    for (int i = 0; i < noStudents; i++) {
        while (true) {
            cout << "Enter grade for student " << i + 1 << " : ";
            cin >> grades[i];
            if (cin.fail() || grades[i] < 0) {
                cout << "Invalid input! Student grade must be a non-negative number. \n";
                cin.clear();
                cin.ignore(numeric_limits<streamsize>::max(), '\n');
            } else {
                break;
            }
        }
}
}

// To check for pass or fail
bool PassingGrade(int grade, int passing) {
    return grade >= passing;
}

int main() {
    int passing, noStudents;

    cout << "Enter the passing grade: ";
    cin >> passing;
    if (passing <= 0) {
        cout << "Invalid grade! \n";
        return 1;  
    }

    cout << "Enter the number of students: ";
    cin >> noStudents;
    if (noStudents <= 0) {
        cout << "Invalid number of students! \n";
        return 1;  
    }
//declaring an arrayyy
    int grades[noStudents];

// Input grades for students
    Inputgrades(grades, noStudents);

// for ailed students
    cout << endl << "Failed: " << endl;
    for (int i = 0; i < noStudents; i++) {
        if (!PassingGrade(grades[i], passing)) {  
            cout << "Student " << i + 1 << endl;
        }
    }

// for passed students
    cout << endl << "Passed: " << endl;
    for (int i = 0; i < noStudents; i++) {
        if (PassingGrade(grades[i], passing)) {  
            cout << "Student " << i + 1 << endl;
        }
    }

    return 0;
}
