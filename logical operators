import java.util.Scanner;

public class Operators{
public static void main(String [] args){
int num1, num2, result, ope;
char operator;
Scanner scanner = new Scanner(System.in);
System.out.print("Enter Number 1: ");
num1 = scanner.nextInt();
System.out.print("Enter Number 2: ");
num2 = scanner.nextInt();
System.out.println("Choose an operator(+, -, *, /)");
operator = scanner.next().charAt(0);
ope = switchope(num1,num2,operator,result);
System.out.println("The total of the two numbers is " + ope);

}
public static int switchope(int num1, int num2, char operator, int result){
switch (operator) {
case '+':
    result = num1 + num2;
    break;
    
case '-':
    result = num1 - num2;
    break;
    
case '*':
    result = num1 * num2;
    break;
    
case '/':
    result = num1 / num2;
    break;
    
default:
    System.out.println("Invalid operator!");
    break;
}
}
}

